<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane layoutX="0.0" layoutY="0.0" snapToPixel="true" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FormUI.BattleShipFXUI">
      <bottom>
          <VBox spacing="10.0">
          <HBox alignment="BOTTOM_CENTER" spacing="10.0" BorderPane.alignment="BOTTOM_CENTER">
              <children>
                  <Button fx:id="prevMove" disable="true" mnemonicParsing="false" onMouseClicked="#previousMoveButtonClick" text="Previous" textAlignment="CENTER" />
                  <Label fx:id="moveNumber" text="1" />
                  <Button fx:id="nextMove" disable="true" mnemonicParsing="false" onMouseClicked="#nextMoveButtonClick" text="Next" textAlignment="CENTER" />
              </children>
        </HBox>
        <HBox alignment="BOTTOM_CENTER" spacing="10.0" BorderPane.alignment="BOTTOM_CENTER">
          <children>
            <Button fx:id="loadGame" mnemonicParsing="false" onMouseClicked="#loadButtonClick" text="Load Game" textAlignment="CENTER" />
            <Button fx:id="startGame" mnemonicParsing="false" onMouseClicked="#StartGame" text="Start Game" textAlignment="CENTER" />
            <Button fx:id="attack" mnemonicParsing="false" text="Attack" textAlignment="CENTER" />
            <Button fx:id="gameStatistics" mnemonicParsing="false" text="Game Statistics" textAlignment="CENTER" onMouseClicked="#printStatistics"/>
            <Button fx:id="quit" mnemonicParsing="false" text="Quit" textAlignment="CENTER" />
          </children>
        </HBox>
          </VBox>
      </bottom>
      <left>
        <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="TOP_LEFT">
          <children>
            <Label text="Player 1" textFill="BLACK" />
            <Label text="Score" />
            <Label fx:id="player1Score" text="0" />
          </children>
        </VBox>
      </left>
      <right>
        <VBox alignment="CENTER" spacing="10.0">
          <children>
            <Label text="Player 2" />
            <Label text="Score" />
            <Label fx:id="player2Score" text="0" />
          </children>
        </VBox>
      </right>
      <top>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
          <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="The Battle Ships Game" textAlignment="CENTER" underline="true">
              <font>
                <Font size="25.0" />
              </font>
            </Label>
          </children>
        </HBox>
      </top>
         <center>
            <TabPane id="boardsTabPane" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
              <tabs>
                <Tab text="OpponentsPane">
                  <content>
                    <AnchorPane fx:id="opponentGridArea" />
                  </content>
                </Tab>
                <Tab text="My Board">
                  <content>
                    <AnchorPane fx:id="playerGridArea" />
                  </content>
                </Tab>
              </tabs>
            </TabPane>
         </center>
    </BorderPane>
